{
	"name": "wikimedia/cldr-plural-rule-parser",
	"description": "Evaluates plural rules specified in the CLDR project notation.",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/CLDRPluralRuleParser",
	"authors": [
		{
			"name": "Tim Starling",
			"email": "tstarling@wikimedia.org"
		},
		{
			"name": "Niklas LaxstrÃ¶m",
			"email": "niklas.laxstrom@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"CLDRPluralRuleParser\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CLDRPluralRuleParser\\Test\\": "tests/"
		}
	},
	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.7.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "10.5.58"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"phan --allow-polyfill-parser --long-progress-bar",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
